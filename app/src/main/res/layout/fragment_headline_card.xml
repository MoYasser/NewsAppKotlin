<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardConstraintView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@drawable/card_bg">

    <androidx.cardview.widget.CardView
        android:id="@+id/PHCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/headlinePH"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            tools:src="@drawable/placeholder" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/headlineText"
        android:layout_width="297dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="kbfkabfkjafbjkasjksfbkjfk"
        android:textColor="@color/MainText"
        android:textSize="14dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PHCard"
        app:layout_constraintTop_toTopOf="@id/PHCard" />

</androidx.constraintlayout.widget.ConstraintLayout>

